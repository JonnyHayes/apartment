  <!-- Email Highlights Modal -->
  <div class="nav-modal modal modal-fullscreen fade" id="highlightsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">
        <img src="{{function('get_stylesheet_directory_uri')}}/img/optimized/icon-lightbox-close.png" srcset="{{function('get_stylesheet_directory_uri')}}/img/optimized/icon-lightbox-close.png 1x, {{function('get_stylesheet_directory_uri')}}/img/optimized/icon-lightbox-close@x2.png 2x" />
      </span>
    </button>
    <div class="modal-dialog nav-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <h3>Highlights Brochure</h3>
          <p>
            This 80-page editorial brochure gives you a more luxurious look at Ward Village, Ke Kilohana and the lifestyle that comes with it.
          </p>
          <form class="" id="highlights-form" action="" method="post" novalidate>
            <div class="container-fluid">
              <div class="row">
                <!-- Input From -->
                <div class="col-md-6">
                  <div class="form-group"> <!-- Your salutation selection -->
                    <input name="from" type="email" autocomplete="off" class="form-control" placeholder="From" id="from" required data-validation-required-message="Please enter your email address.">
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
                <!-- Input To -->
                <div class="col-md-6">
                  <div class="form-group"> <!-- Your salutation selection -->
                    <input name="to" type="email" autocomplete="off" class="form-control" placeholder="To" id="to" required data-validation-required-message="Please enter an email address.">
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
              </div>
              <div class="row">
                <!-- Input Short Message -->
                <div class="col-md-12">
                  <input name="short-message" type="text" autocomplete="off" class="form-control" placeholder="Short Message" id="short-message">
                </div>
              </div>
              <!-- Submit -->
              <a class="button_sliding" id="highlights-submit">Submit</a>
            </div>
          </form>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->


