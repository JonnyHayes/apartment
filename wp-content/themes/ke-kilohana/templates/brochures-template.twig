  <div id="brochures" class="bg-image">
    <!-- Brochures heading -->
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="content-text-wrapper">
            <h1 class="white-text page-title text-nowrap brochure-title">{{ brochures.title }}</h1>
          </div>
        </div>
      </div>
    </div>
    <div class="container h-center">
      <div class="row">
        <!-- highlights brochure -->
        <div class="col-md-4 right-border">
          <h3 class="white-text default">Highlights Brochure</h3>
          <p class="white-text brochure-paragraph ">
            {{ brochures.highlights_brochure }}
          </p>
          <a class="button_sliding" data-toggle="modal" data-backdrop="static" data-keyboard="false" data-target="#highlightsModal">
            Email the brochure
          </a>
        </div>
        <!-- lifestyle brochure -->
        <div class="col-md-4 right-border">
          <h3 class="white-text default">Lifestyle Brochure</h3>
          <p class="white-text brochure-paragraph">
