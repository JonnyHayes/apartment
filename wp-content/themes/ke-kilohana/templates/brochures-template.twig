          <a class="button_sliding" data-toggle="modal" data-backdrop="static" data-keyboard="false" data-target="#lifestyleModal">
            Email the brochure
          </a>
        </div>
        <!-- floor plans -->
        <div class="col-md-4">
          <h3 class="white-text default">Floor Plans</h3>
          <p class="white-text brochure-paragraph">
            {{ brochures.floor_plans_brochure }}
          </p>
          <a class="button_sliding" data-toggle="modal" data-backdrop="static" data-keyboard="false" data-target="#floorPlansModal">
            Email the brochure
          </a>
        </div>
      </div>
    </div>
  </div>

